                        <!-- Resistor sensor -->
                        <tr>
                        <td width="40%" style="vertical-align:middle;"><h3>Proximity Sensor</h3><small id="resistorsensor">(no value recieved)</small></td>
                        <td style="vertical-align:middle;"></td>
                        <td width="30%" style="vertical-align:middle;"><h4>&nbsp;<span id="resistorLabel" class="label">Unknown</span></h4></td>
                        </tr>

                        <!-- City sensor -->
                        <tr>
                        <td width="40%" style="vertical-align:middle;"><h3>City Sensor</h3><small id="citysensor">(no value recieved)</small></td>
                        <td style="vertical-align:middle;"></td>
                        <td width="30%" style="vertical-align:middle;"><h4>&nbsp;<span id="cityLabel" class="label">Unknown</span></h4></td>
                        </tr>


                        <!-- Farm sensor -->
                        <tr>
                        <td width="40%" style="vertical-align:middle;"><h3>Farm Sensor</h3><small id="farmsensor">(no value recieved)</small></td>
                        <td style="vertical-align:middle;"></td>
                        <td width="30%" style="vertical-align:middle;"><h4>&nbsp;<span id="farmLabel" class="label">Unknown</span></h4></td>
                        </tr>

                    </table>
              </div>
            </div>
          <div class="panel panel-default">
            <div class="panel-body">
                    <b>Latest MQTT message:  </b> <small id="message">no message recieved</small>
            </div>
          </div>

  </body>
